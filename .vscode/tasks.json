{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Foam: Create New Note From Template",
        "type": "shell",
        "command": "cp .foam/templates/temp1.md ${file} && sed -i '' 's/\\${FOAM_TITLE}/${fileBasenameNoExtension}/g' ${file}",
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": true,
          "clear": false
        }
      }
    ]
  }